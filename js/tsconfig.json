{
    "compilerOptions": {
        "lib": ["dom", "es2020"],
        "target": "esnext",
        "module": "esnext",
        "outDir": "dist",
        "declaration": true,
        "emitDeclarationOnly": true,
        "allowJs": true,
        "checkJs": false,
        "noEmit": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "typeRoots": [
            "./types"
        ],
    },
    "include": ["cryptus/cryptus.js", "types/**/*"],
    "exclude": ["node_modules"]
}
